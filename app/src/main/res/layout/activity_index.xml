<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f2e9"
        android:padding="16dp">

        <!-- LinearLayout = form ka container (ye white ke andar dikhega) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBillNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill No: ----"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <!-- HEADER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’Ž Add New Customer ðŸ’Ž"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="#c9a24d"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp"/>

            <!-- Customer Name -->

            <EditText
                android:id="@+id/etCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Customer Name"
                android:inputType="textPersonName"
                android:layout_marginBottom="12dp"/>

            <!-- Mobile Number -->

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:focusable="false"
                android:clickable="true" />
            <!-- Deposit Amount -->

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/Address"
                android:inputType="text"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/Description"
                android:inputType="text"
                android:layout_marginBottom="20dp"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:layout_marginTop="12dp">

                <TableLayout
                    android:id="@+id/tableJewellery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:padding="8dp"
                    android:stretchColumns="*">

                    <!-- ================= HEADER ROW ================= -->
                    <TableRow>


                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/cell_border" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/cell_border" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Rate"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/cell_border" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Value"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/cell_border" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Making"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/cell_border" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/cell_border" />

                    </TableRow>

                    <!-- ================= ROW 1 ================= -->
                    <TableRow>

                        <!-- TYPE : Spinner -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/cell_border"
                            android:gravity="center"
                            android:padding="4dp">

                            <Spinner
                                android:id="@+id/spinnerMetal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:spinnerMode="dropdown"/>
                        </LinearLayout>

                        <!-- WEIGHT : value + gm -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:background="@drawable/cell_border"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <EditText
                                android:id="@+id/etWeight"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:inputType="numberDecimal"
                                android:gravity="end"
                                android:background="@null"
                                android:padding="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="gm"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingStart="4dp"/>
                        </LinearLayout>

                        <!-- RATE -->
                        <EditText
                            android:id="@+id/etRate"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:inputType="numberDecimal"
                            android:gravity="start|center_vertical"
                            android:background="@drawable/cell_border"
                            android:padding="6dp"/>

                        <!-- VALUE (Editable) -->
                        <EditText
                            android:id="@+id/etValue"
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:inputType="numberDecimal"
                            android:gravity="start|center_vertical"
                            android:background="@drawable/cell_border"
                            android:padding="6dp"/>

                        <!-- MAKING (Editable) -->
                        <EditText
                            android:id="@+id/etMaking"
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:inputType="numberDecimal"
                            android:gravity="start|center_vertical"
                            android:background="@drawable/cell_border"
                            android:padding="6dp"/>

                        <!-- AMOUNT (Readonly but Border Visible) -->
                        <EditText
                            android:id="@+id/etAmount"
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="false"
                            android:gravity="end|center_vertical"
                            android:background="@drawable/cell_border"
                            android:layout_marginBottom="5dp"
                            android:padding="6dp"/>


                    </TableRow>


                    <!-- ================= ROW 2 ================= -->



                </TableLayout>

            </HorizontalScrollView>



            <Button
                android:id="@+id/btnAddRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"/>

            <LinearLayout
                android:id="@+id/totalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Total Amount is: 0.00" />


            </LinearLayout>


            <EditText
                android:id="@+id/etDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="Enter Deposit Amount"
                android:inputType="numberDecimal"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tvPendingAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Amount"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/etPendingDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:inputType="numberDecimal"
                android:layout_marginBottom="20dp"/>


            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_customer"

                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnViewPending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_pending"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>