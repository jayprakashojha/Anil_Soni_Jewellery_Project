<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF8E1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’Ž Deposit Amount ðŸ’Ž"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#c9a24d"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"/>
    <!-- Bill No -->
    <TextView
        android:id="@+id/tvBillNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill No:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#B8962E"
        android:layout_marginBottom="12dp"/>

    <!-- Customer Name -->
    <TextView
        android:id="@+id/tvCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- Amount -->
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvDepositAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit Amount:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/pendingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending Amount:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        android:layout_marginTop="12dp"/>



</LinearLayout>
