<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f2e9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c9a24d"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Pending -->
            <TextView
                android:id="@+id/tvPendingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Center Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’Ž M. K. Jewellers ðŸ’Ž"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <!-- Download -->
            <TextView
                android:id="@+id/downloadBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- HERO SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jewellery Management System"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#4E342E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage customers And billing records easily"
                android:textSize="14sp"
                android:textColor="#6D4C41"
                android:layout_marginTop="8dp"/>

            <!-- BUTTONS -->
            <Button
                android:id="@+id/btnNewCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž• New Customer"
                android:layout_marginTop="24dp"
                android:backgroundTint="#c9a24d"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnViewCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ View Customer List"
                android:layout_marginTop="12dp"
                android:backgroundTint="#8D6E63"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
